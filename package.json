{
  "name": "skanderbeg-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --watch",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write --print-width 100 .",
    "typecheck": "tsc --noEmit",
    "mikro-orm": "cross-env NODE_OPTIONS='--loader ts-node/esm --no-warnings' npx mikro-orm migration:create",
    "orm:migrate:create": "cross-env NODE_OPTIONS='--loader ts-node/esm --no-warnings'  npx mikro-orm migration:create",
    "orm:migrations:up": "cross-env NODE_OPTIONS='--loader ts-node/esm --no-warnings'  npx mikro-orm migration:up"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middlewares/*.ts"
    ]
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#guards/*": "./app/guards/*.js",
    "#entities/*": "./app/entities/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#factories/*": "./app/factories/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.5.1",
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/tsconfig": "^1.2.1",
    "@eslint/js": "^9.0.0",
    "@japa/api-client": "^2.0.2",
    "@japa/assert": "^2.1.0",
    "@japa/plugin-adonisjs": "^3.0.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.3.107",
    "@types/adm-zip": "^0.5.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.7",
    "eslint": "^9.0.0",
    "hot-hook": "^0.2.1",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typeconv": "^2.3.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.1.1",
    "@adonisjs/core": "^6.2.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^2.3.0",
    "@adonisjs/drive-gcs": "^1.1.2",
    "@adonisjs/lucid": "^20.5.1",
    "@adonisjs/redis": "^8.0.1",
    "@adonisjs/session": "^7.1.1",
    "@google-cloud/storage": "^7.9.0",
    "@mikro-orm/cli": "^6.2.1",
    "@mikro-orm/core": "^6.2.1",
    "@mikro-orm/entity-generator": "^6.2.1",
    "@mikro-orm/migrations": "^6.2.1",
    "@mikro-orm/postgresql": "^6.2.1",
    "@mikro-orm/reflection": "^6.2.1",
    "@types/geojson": "^7946.0.14",
    "@vinejs/vine": "^2.0.0",
    "adm-zip": "^0.5.12",
    "adonis-autoswagger": "^2.8.1",
    "better-sqlite3": "^9.4.1",
    "cross-env": "^7.0.3",
    "luxon": "^3.4.4",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "sharp": "^0.33.3",
    "tga": "^1.0.7"
  },
  "mikro-orm": {
    "useTsNode": true
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
